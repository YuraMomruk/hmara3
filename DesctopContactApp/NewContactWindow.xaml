<Window x:Class="DesctopContactApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesctopContactApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="NewContactWindow" Height="300" Width="300">
   
    <Grid Background="MintCream">
        <StackPanel Margin="10px">
            <Label>First name:</Label>
            <TextBox x:Name="nameTextBox"
                     Margin="0,0,0,5"/>
            <Label>Second name:</Label>
            <TextBox x:Name="surnameTextBox"    
                     Margin="0,0,0,5"/>
            <Label>Last name:</Label>
            <TextBox x:Name="PatronymicTextBox"    
                     Margin="0,0,0,5"/>

            <Label>Address:</Label>
            <TextBox x:Name="addressTextBox"    
                     Margin="0,0,0,5"/>
            <Label>PhoneNumber:</Label>
            <TextBox x:Name="phoneTextBox" 
                     Margin="0,0,0,5"/>
            <Button Content="Save"
                    Background="Gray"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
